{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "noImplicitReturns": true,
      "noUnusedLocals": true,

      "lib": ["ES2020"],
      "rootDir": ".",
      "outDir": "lib",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }